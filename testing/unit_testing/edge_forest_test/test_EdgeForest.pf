    end subroutine indexx_highTie

    @Test
    subroutine indexx_random(this)
      class(TestEdgeForest), intent(inout) :: this

      this%array_to_sort = (/ 3._r8, 8._r8, 10._r8, 2._r8, 7._r8 /)

